# WordPress Deployment Configuration
# Copy this file to deploy-config.env and update with your values

# Server Configuration
DO_SERVER_IP=167.71.96.206
DO_SERVER_USER=root
DO_SERVER_PASSWORD=your_server_password_here

# Paths
SERVER_PATH=/var/www/html
BACKUP_DIR=/var/backups/wordpress

# Theme Configuration
ACTIVE_THEME=hello-theme-child-master

# Database Configuration (for wp-config.php)
DB_HOST=your_database_host_here
DB_PASSWORD=your_database_password_here

# Site Configuration
